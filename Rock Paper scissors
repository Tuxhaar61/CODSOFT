import random

def play_game():
    # Dictionary: number -> choice
    options = {
        1: "rock",
        2: "paper",
        3: "scissors"
    }
    
    user_score = 0
    computer_score = 0

    print("Welcome to Rock-Paper-Scissors!")
    print("Type 'quit' to exit the game.\n")

    while True:
        print("\nChoose:")
        print("1 → Rock")
        print("2 → Paper")
        print("3 → Scissors")
        
        user_input = input("Enter your choice (1-3): ").lower()
        
        if user_input == "quit":
            print("\nFinal Score → You:", user_score, "Computer:", computer_score)
            print("Thanks for playing!")
            break
        
        if not user_input.isdigit() or int(user_input) not in options:
            print(" Invalid choice. Try again.")
            continue
        
        user_choice = options[int(user_input)]
        computer_choice = options[random.randint(1, 3)]
        
        print("You chose:", user_choice)
        print("Computer chose:", computer_choice)

        if user_choice == computer_choice:
            print("It's a tie!\n")
        elif (user_choice == "rock" and computer_choice == "scissors") or \
             (user_choice == "scissors" and computer_choice == "paper") or \
             (user_choice == "paper" and computer_choice == "rock"):
            print("✅ You win this round!\n")
            user_score += 1
        else:
            print(" Computer wins this round!\n")
            computer_score += 1

play_game()
